{
  "name": "react-native-simple-store",
  "version": "2.0.0",
  "description": "A minimalistic wrapper around React Native's AsyncStorage.",
  "main": "dist/index.js",
  "scripts": {
    "dist": "babel src -d dist",
    "gen-docs": "./node_modules/.bin/jsdox src/index.js --output docs",
    "preversion": "npm run dist -s ; npm run gen-docs -s",
    "test": "./node_modules/.bin/jest"
  },
  "jest": {
    "unmockedModulePathPatterns": [
      "<rootdir>/node_modules/react-native"
    ],
    "collectCoverage": true,
    "preset": "react-native"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jasonmerino/react-native-simple-store"
  },
  "keywords": [
    "React Native",
    "iOS",
    "Android",
    "AsyncStorage",
    "data store",
    "key value store"
  ],
  "author": "Jason Merino",
  "license": "MIT",
  "dependencies": {
    "lodash.merge": "4.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/cli": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "jest": "^24.7.1",
    "jsdox": "^0.4.10",
    "react": "16.8.3",
    "react-native": "0.59.5",
    "@react-native-community/async-storage": "^1.3.3"
  }
}
